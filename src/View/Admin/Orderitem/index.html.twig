{% extends 'layout_admin.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/ordered/ordered.css">
{% endblock %}

{% block content %}

<h1>Les commandes</h1>
{% for ord in orders %}
    <div class="main">
        <a href="/admin/orderitem/show?id={{ ord.id }}" class="ordera">
            {{ ord.username }} - Prix total : {{ ord.total_amount }} - Date de
                commande : {{ ord.created_at | date("d/m/Y g:i:sA") }}
        </a>
    </div>
{% endfor %}

{% endblock %}