{% extends 'layout_login.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="form">
    <ul class="tab-group">
        <li class="tab active"><a href="#authentification">Se connecter</a></li>
        <li class="tab"><a href="#signup">S'inscrire</a></li>
    </ul>
    
    <div class="tab-content">
        <div id="authentification">   
            <h2>Content de vous revoir</h2>

            {% if errors is defined and errors|length > 0 %}
                <div class="errors">
                    <ul>
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            
            <form action="/login" method="post">
                <div class="field-wrap">
                    <label for="email_login">
                        Email<span class="req">*</span>
                    </label>
                    <input type="email" id="email_login" name="email" value="{{ data.email }}" required autocomplete="off"/>
                </div>
                
                <div class="field-wrap">
                    <label for="password_login">
                        Mot de passe<span class="req">*</span>
                    </label>
                    <input type="password" id="password_login" name="password" value="{{ data.password }}" required autocomplete="off"/>
                </div>
                
                <p class="forgot"><a href="/forgot_password">Mot de passe oublié</a></p>
                
                <button type="submit" class="button button-block">Se connecter</button>
            </form>
        </div>
        
        <div id="signup">   
            <h1>Inscription</h1>
            
            <form action="/signup" method="post">
                <div class="top-row">
                    <div class="field-wrap">
                        <label for="first_name">
                            Prénom <span class="req">*</span>
                        </label>
                        <input type="text" id="first_name" name="first_name" value="{{ data.firstName }}" required autocomplete="off" />
                    </div>
                
                    <div class="field-wrap">
                        <label for="last_name">
                            Nom <span class="req">*</span>
                        </label>
                        <input type="text" id="last_name" name="last_name" value="{{ data.lastName }}" required autocomplete="off"/>
                    </div>
                </div>

                <div class="field-wrap">
                    <label for="email_signup">
                        Email <span class="req">*</span>
                    </label>
                    <input type="email" id="email_signup" name="email" value="{{ data.email }}" required autocomplete="off"/>
                </div>
                
                <div class="field-wrap">
                    <label for="password_signup">
                        Mot de passe <span class="req">*</span>
                    </label>
                    <input type="password" id="password_signup" name="password" value="{{ data.password }}" required autocomplete="off"/>
                </div>

                <div class="field-wrap">
                    <label for="username">
                       Pseudo <span class="req">*</span>
                    </label>
                    <input type="text" id="username" name="username" value="{{ data.username }}" required autocomplete="off"/>
                </div>

                <div class="field-wrap">
                    <label for="phone">
                        Téléphone <span class="req">*</span>
                    </label>
                    <input type="text" id="phone" name="phone" value="{{ data.phone }}" required autocomplete="off"/>
                </div>
                
                <button type="submit" class="button button-block">Commencer</button>
                
                {% if errors is defined and errors|length > 0 %}
                    <div class="errors">
                        <ul>
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </form>
        </div>
    </div><!-- tab-content -->
</div> <!-- /form -->
{% endblock %}
