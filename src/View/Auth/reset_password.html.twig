{% extends 'layout_login.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
<div class="form">
    <h1>Mot de passe oublié</h1>
    
    {% if success %}
        <p>Un e-mail de réinitialisation a été envoyé à votre adresse.</p>
    {% else %}
        {% if errors is defined and errors|length > 0 %}
            <div class="errors">
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        
        <form action="/reset_password?token={{ token }}" method="post">
            <div class="field-wrap">
                <label for="password_reset">
                    Nouveau mot de passe <span class="req">*</span>
                </label>
                <input type="password" id="password_reset" name="password" required autocomplete="off"/>
            </div>
            
            <button type="submit" class="button button-block">Réinitialiser</button>
        </form>
    {% endif %}
</div>
{% endblock %}
