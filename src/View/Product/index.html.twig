{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/product/products.css">
{% endblock %}

{% block content %}

<h1>Nos articles!</h1>
<div>
    <div>
        {% for prod in product %}
        <ul>
            <li>
                <p>{{ prod.name }} - {{ prod.price|intToCurrency }}</p>
            </li>
            <li>
                <p>{{ prod.description }}</p>
            </li>
            <form action="/product/show" method="GET">
                <input type="hidden" name="id" value="{{ prod.id }}">
                <button>Voir</button>
            </form>
        </ul>
        {% endfor %}
        
{% endblock %}