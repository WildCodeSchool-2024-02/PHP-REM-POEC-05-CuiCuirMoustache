{
    "name": "wildcodeschool/simple-mvc",
    "description": "Simple from scratch PHP MVC for WildCodeSchool students",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Maurice"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "twig/twig": "^3.5.1",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "filp/whoops": "^2.15",
        "phpro/grumphp": "^1.9",
        "phpstan/phpstan": "^1.10.7",
        "phpunit/phpunit": "^11.2",
        "squizlabs/php_codesniffer": "^3.10",
        "phpmd/phpmd": "^2.15"
       
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
